{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "Modules/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/include",
                "-I/usr/include/opencv4",
                "-I/usr/include/libcamera",
                "-L/usr/lib",
                "-lstdc++",
                "-latomic",
                "-pthread",
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_highgui",
                "-lopencv_imgcodecs",
                "-lcamera",
                "-lwiringPi",
                "-lgpiod",
                "-lzmq",
                "-lm",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
